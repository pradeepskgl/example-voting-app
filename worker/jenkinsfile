pipeline {
    agent any
    tools {
        maven 'Maven 3.6.1' 
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building Worker app'
				dir('worker'){
					sh 'mvn compile'
				}
            }
        }
		stage(two) {
			steps {
				echo 'Testing Worker app'
				dir('worker'){
					sh 'mvn test'
				}
			}
		}
		stage(three) {
			steps {
				echo 'Packaging Worker app'
				dir('worker'){
					sh 'mvn package'
				}
			}
		}
    }
	post {
		always {
			echo 'Pipeline as Code'
		}
	}
}